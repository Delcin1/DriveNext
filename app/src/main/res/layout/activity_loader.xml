<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="248dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="32dp"
    android:backgroundTint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/stylishPurple"
    app:strokeWidth="3dp">

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:src="@drawable/ic_mercbenz" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/montserrat"
        android:text="S 500 Sedan"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="61dp"
        android:fontFamily="@font/montserrat"
        android:text="Mercedes-Benz"
        android:textColor="@color/gray"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/montserrat"
        android:text="2500Р в день"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="14sp"
        android:textStyle="normal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/ic_at" />

    <TextView
        android:id="@+id/tvTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/montserrat"
        android:text="A/T"
        android:textColor="@color/anotherGray"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:textStyle="normal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/ic_fuel" />

    <TextView
        android:id="@+id/tvFuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/montserrat"
        android:text="Бензин"
        android:textColor="@color/anotherGray"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:textStyle="normal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbRent"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/stylishPurple"
        android:fontFamily="@font/montserrat"
        android:padding="0dp"
        android:text="Забронировать"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbDetails"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat"
        android:text="Детали"
        android:textColor="@color/stylishPurple"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        app:cornerRadius="8dp"
        app:strokeColor="@color/stylishPurple"
        app:strokeWidth="1dp" />
</com.google.android.material.card.MaterialCardView>


